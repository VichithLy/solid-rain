{
    "env": {
        "es2021": true,
        "node": true,
        "jquery": true,
        "browser": true

    },
    "globals": {
        "L": "writable",
        "lng": "writable",
        "lat": "writable",
        "zoom": "writable",
        "mymap":  "writable"
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["**/public/bundle.js", "**/dist/*.js"],
    "rules": {
        "indent": ["error", 4],
        "max-len": ["error", 80]
    }
}
