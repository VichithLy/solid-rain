{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    // Indent with 4 spaces
    "indent": ["error", 4],
    // Max line characters length
    "max-len": ["error", 80]
  }
}
